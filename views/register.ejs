<%- include('./partials/header.ejs')%>
    <div style="display: flex; align-items: center;justify-content: center;height: 85vh;">

        <div class="text-center center-div mx-4" style="width:100vw;max-width: 500px;">
            <div class="container  border py-4">

                <div class="title pb-5">

                    <h2 class="text-center" style="color:#6c757d">Register Page</h2>
                    <span>Register for new users</span>
                </div>
                <form action="/register" method="post">
                    <div class="mb-3">

                        <input type="text" name="name" class="form-control" id="username" aria-describedby="username"
                            placeholder="Enter Name" required>
                    </div>
                    <div class="mb-3">

                        <input type="password" name="password" class="form-control" id="password"
                            aria-describedby="password" placeholder="Enter Password">
                    </div>
                    <!-- <div class="mb-3">

                        <input type="text" name="role" class="form-control" id="role" aria-describedby="role" placeholder="Enter Role">
                    </div> -->

                    <button type="submit" class="btn btn-outline-secondary">Register</button>
                </form>

                <div class="form-text my-4">
                    <span>Already Have An Account</span>
                    <a href="/Login">Login</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs')%>